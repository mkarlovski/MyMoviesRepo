
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "_Layout";
    ViewBag.Title = "ModifyComments";
} 
@model List<MyMovies.ViewModels.MovieCommentApproveModel>;


    <div>
        <table class="table" style="margin-top:20px;">
            <thead>
                <tr>
                    <td>Movie</td>
                    <td>User</td>
                    <td>Comment</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in @Model)
                {
                    <tr>
                        <td>@comment.Movie</td>
                        <td>@comment.Username</td>
                        <td>@comment.Comment</td>
                        <td><a asp-controller="MovieComment" asp-action="Approve" asp-route-id="@comment.Id"> Approve</a> | <a asp-controller="MovieComment" asp-action="Delete" asp-route-id="@comment.Id" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>