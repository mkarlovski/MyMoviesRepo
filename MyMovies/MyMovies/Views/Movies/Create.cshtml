@*@model MyMovies.Models.Movie;*@
@*@model MyMovies.Data.Movie;*@
@model MyMovies.ViewModels.MovieCreateModel;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Create";
}

<p>Add new Movie</p>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="Create" method="post">  @* so ova posle preku HttpPost se povikuva vtoriot method Create  *@
        @*<div asp-validation-summary="All" class="text-danger"></div>     @*ova ni prikazuva dokolku nekoe pole ne ni e popolneto*@ 
        <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>   @* so ova ke se pokazuva izvestuvanjeto pod samiot input*@
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cast" class="control-label">Cast</label>
                <input asp-for="Cast" class="form-control" />
                <span asp-validation-for="Cast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>

