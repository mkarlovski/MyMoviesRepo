@model MyMovies.Models.Movie;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Create";
}

<p>Add new Movie</p>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="Create">
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label">Image URL</label>
                <input asp-for="ImageURL" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cast" class="control-label">Cast</label>
                <input asp-for="Cast" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>

